<?xml version="1.0" encoding="UTF-8"?>
<alerting:PopupPage
 xmlns:alerting="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup" xmlns="http://xamarin.com/schemas/2014/forms"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 xmlns:animations="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
 x:Class="Cryfolio.Views.Alertify">

     <alerting:PopupPage.Animation>
         <animations:ScaleAnimation DurationIn="600"
                                   DurationOut="400"
                                   EasingIn="SinOut"
                                   EasingOut="SinIn"
                                   HasBackgroundAnimation="True"
                                   PositionIn="Center"
                                   PositionOut="Center"
                                   ScaleIn="2"
                                   ScaleOut="1.4" />
        </alerting:PopupPage.Animation>

      <StackLayout Margin="12"               
                 BackgroundColor="#333333"
                 HorizontalOptions="Center"
                 VerticalOptions="Start">
    
      

        <Grid BackgroundColor="#333333">                   
                <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Start" BackgroundColor="#4dff88" x:Name="asdf" TextColor="Black"></Label>  
        </Grid>


    </StackLayout>

</alerting:PopupPage>

